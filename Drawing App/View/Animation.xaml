<Window x:Class="Drawing_App.View.Animation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Drawing_App.View"
          xmlns:viewmodel="clr-namespace:Drawing_App.VM"
        mc:Ignorable="d"
        Title="Animation" Height="450" Width="800">
    <Window.DataContext>
        <viewmodel:AnimationVM/>
    </Window.DataContext>
    <Grid>
        <!-- Preview Area -->
        <Border CornerRadius="10" Background="#2E2E3E" Margin="10">
            <Image Source="{Binding AnimationImage}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>

        <!-- Controls -->
        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="10">
            <!-- Start Button -->
            <Button Content="▶ Start" 
                    Command="{Binding StartAnimationCommand}" 
                    Margin="5" Padding="10"
                    Background="#3A86FF" Foreground="White" 
                    FontSize="14" Width="100"/>

            <!-- Pause Button -->
            <Button Content="❚❚ Pause" 
                    Command="{Binding PauseAnimationCommand}" 
                    Margin="5" Padding="10"
                    Background="#FFBE0B" Foreground="White" 
                    FontSize="14" Width="100"/>

            <!-- Save Button -->
            <Button Content="💾 Save" 
                    Command="{Binding SaveAnimationCommand}" 
                    Margin="5" Padding="10"
                    Background="#FB5607" Foreground="White" 
                    FontSize="14" Width="100"/>

            <!-- Close Button -->
            <Button Content="✖ Close" 
                    Command="{Binding ClosePreviewCommand}" 
                    Margin="5" Padding="10"
                    Background="#FF006E" Foreground="White" 
                    FontSize="14" Width="100"/>
        </StackPanel>
    </Grid>
</Window>
